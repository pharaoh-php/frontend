{
  "compilerOptions": {
    "baseUrl": ".",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "public/js",
    "noImplicitAny": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "@pharaoh/*": ["./@pharaoh/*"],
      "@angular/*": ["./node_modules/@angular/*"]
    },
    "rootDir": ".",
    "inlineSourceMap": true,
    "lib": [ "es2015", "dom" ],
    "target": "es5",
    "types": []
  },
  "exclude": [
    "node_modules",
    "public"
  ]
}
